@model ContactModel;
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Edit Contact </h1>

</div>

<form asp-controller="Contact" asp-action="Edit" method="post">

  <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label for="name">Nome</label>
    <input type="text" class="form-control" placeholder="Digite o nome" asp-for="Name">
    @Html.ValidationMessageFor(x => x.Name)
  </div>

   <div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" class="form-control" placeholder="Digite o e-mail" asp-for="Email">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

   <div class="form-group">
    <label for="cell">Celular</label>
    <input type="text" class="form-control" placeholder="Digite o celular" asp-for="Cell">
    @Html.ValidationMessageFor(x => x.Cell)
  </div>

  <button type="submit" class="btn btn-primary btn-block"  asp-controller="Contact" asp-action="Update" asp-route-id="@Model.Id">Alterar</button>
  <a class="btn btn-secondary btn-block" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>

</form>

